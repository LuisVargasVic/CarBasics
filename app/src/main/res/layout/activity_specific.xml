<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.venkonenterprise.carbasics.Main.SpecificActivity">

    <ImageView
        android:id="@+id/image_brand_specific"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:scaleType="fitCenter"
        app:srcCompat="?android:attr/textSelectHandle"/>

    <TextView
        android:id="@+id/model_text_specific"
        android:textSize="20sp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="@string/name"
        android:textColorHighlight="@android:color/primary_text_dark"
        android:layout_below="@id/image_brand_specific"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/basic_text_specific"
        android:textSize="20sp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:text="@string/name"
        android:textColorHighlight="@android:color/primary_text_dark"
        android:layout_below="@id/model_text_specific"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/activity_horizontal_margin" />

    <com.google.android.youtube.player.YouTubePlayerView
        android:id="@+id/youtube_player"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:layout_below="@id/basic_text_specific"/>

    <TextView
        android:id="@+id/tutorial_text"
        android:textSize="20sp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:text="@string/name"
        android:textColorHighlight="@android:color/primary_text_dark"
        android:layout_below="@id/youtube_player"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/activity_horizontal_margin" />

</RelativeLayout>
